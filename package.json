{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "lint": "eslint --ignore-path .gitignore .",
    "prepare": "husky install",
    "test": "lerna run test",
    "upgrade-all": "yarn workspaces run upgrade && yarn upgrade --latest"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "eslint": "^8.39.0",
    "eslint-plugin-jest": "^27.2.1",
    "hermes-eslint": "^0.13.1",
    "husky": "^8.0.3",
    "lerna": "^7.1.1",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3"
  },
  "resolutions": {
    "semver": "^7.5.3"
  }
}
